<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- food -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- food name -->
        <TextView
            android:id="@+id/foodNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- calories/serving size -->
        <TextView
            android:id="@+id/foodCaloriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="160 cal / 100 g"
            android:textSize="14sp"
            android:textColor="#757575"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Proteins, Carbs, and Fats -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/foodProteinsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="14sp"
                android:textColor="#757575" />

        <!--<TextView
            android:id="@+id/foodCarbsTextViewSpacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textSize="14sp"
            android:textColor="#757575" />-->

            <TextView
                android:id="@+id/foodCarbsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#757575" />

            <!--<TextView
                android:id="@+id/foodFatsTextViewSpacer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textSize="14sp"
                android:textColor="#757575" />-->

            <TextView
                android:id="@+id/foodFatsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#757575" />
    </LinearLayout>
</LinearLayout>

<!-- delete button -->
    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:layout_marginStart="8dp" />
</LinearLayout>
